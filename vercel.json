{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",   // required for Chromium
        "runtime": "nodejs18.x"    // Node 18+ for playwright-aws-lambda
      }
    }
  ],
  "routes": [
    {
      "src": "/generate-image/prompt=(.*)",
      "dest": "api/index.js"
    }
  ]
}
